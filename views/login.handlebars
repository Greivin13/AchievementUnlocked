<div class="form-signin container col-3 text-center">
  <form id="loginForm" action="/api/users/login" method="POST">
    <img class="my-4 w-100" src="https://i.imgur.com/Mt6nYs0.png" alt="logo" />
    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

    <div class="form-floating">
      <input
        name="email"
        type="email"
        class="form-control"
        id="email-login"
        placeholder="name@example.com"
      />
      <label for="email-login">Email address</label>
    </div>
    <div class="form-floating">
      <input
        name="password"
        type="password"
        class="form-control"
        id="password-login"
        placeholder="Password"
      />
      <label for="password-login">Password</label>
    </div>

    {{! <div class="checkbox m-4">
      <label>
        <input type="checkbox" value="remember-me"> Remember me
      </label>
    </div> }}
    <button
      id="loginBtn"
      class="mt-3 w-100 btn btn-lg btn-primary"
      type="submit"
    >Sign in</button>
    <div class="text-center mt-4">
      <p>Don't have an account?</p>
      <button id="signupNav" class="btn m-4">
        <a href="/sign-up">Sign up</a></button>
    </div>
  </form>
</div>

{{! <script src="/js/login.js"></script> }}