<form id="createReviewForm" action="/api/profile" method="POST">
  <div class="form-floating">
    <input
      name="title"
      type="text"
      class="form-control"
      id="titleInput"
      placeholder="title"
    />
    <label for="titleInput">Title: </label>
  </div>
  <div class="form-floating">
    <input
      name="review_content"
      type="text"
      class="form-control"
      id="reviewInput"
      placeholder="name@example.com"
    />
    <label for="review_content">Review: </label>
  </div>
  <button
    id="submitReviewBtn"
    class="mt-3 w-100 btn btn-lg btn-primary"
    type="submit"
  >Submit Review!</button>
</form>